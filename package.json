{
  "name": "md2cv",
  "version": "1.2.0",
  "description": "Transform Markdown into professional CVs and Japanese rirekisho (履歴書) - supports PDF/HTML output with multiple paper sizes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.js"
    },
    "./parser/lsp": {
      "types": "./dist/parser/lsp.d.ts",
      "import": "./dist/parser/lsp.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./types/sections": {
      "types": "./dist/types/sections.d.ts",
      "import": "./dist/types/sections.js"
    },
    "./types/config": {
      "types": "./dist/types/config.d.ts",
      "import": "./dist/types/config.js"
    },
    "./validator": {
      "types": "./dist/validator/index.d.ts",
      "import": "./dist/validator/index.js"
    },
    "./generator": {
      "types": "./dist/generator/index.d.ts",
      "import": "./dist/generator/index.js"
    },
    "./template": {
      "types": "./dist/template/index.d.ts",
      "import": "./dist/template/index.js"
    }
  },
  "bin": {
    "md2cv": "./dist/bin.js"
  },
  "files": [
    "dist",
    "examples/*.md",
    "examples/*.png",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm run test:unit",
    "clean": "rm -rf dist coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "prepublishOnly": "npm run clean && npm run check && npm run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cv",
    "resume",
    "markdown",
    "pdf",
    "html",
    "generator",
    "japanese"
  ],
  "author": "Yuya Shinde",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuyash/md2cv.git"
  },
  "homepage": "https://github.com/yuyash/md2cv#readme",
  "bugs": {
    "url": "https://github.com/yuyash/md2cv/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.1",
    "@types/pino-pretty": "^4.7.5",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fast-check": "^4.4.0",
    "markdownlint": "^0.40.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.5.0",
    "textlint": "^15.5.0",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-no-dead-link": "^6.0.1",
    "textlint-rule-preset-japanese": "^10.0.4",
    "textlint-rule-write-good": "^2.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "puppeteer": "^24.33.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "yaml": "^2.8.2"
  }
}
